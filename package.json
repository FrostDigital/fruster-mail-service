		"mongodb": "2.2.36",
		"ms": "^2.1.3"
	},
	"devDependencies": {
		"@types/jasmine": "^3.8.2",
		"@types/mongodb": "2.2.26",
		"@types/ms": "^0.7.31",
		"@types/node": "^16.4.13",
		"@types/uuid": "^8.3.1",
		"fruster-decorators": "0.1.6",
		"fruster-test-utils": "^0.6.9",
		"jasmine": "^3.8.0",
		"jasmine-spec-reporter": "^7.0.0",
		"nyc": "^15.1.0",
		"ts-node": "10.0.0",
		"ts-node-dev": "^1.1.8",
		"typescript": "4.2.4"
