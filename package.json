{
	"name": "fruster-mail-service",
	"version": "0.0.2",
	"private": true,
	"scripts": {
		"start": "fruster-runner ./app.ts",
		"test": "nyc --reporter=html --check-coverage --lines 90 fruster-runner ./spec/support/jasmine-runner.ts",
		"test:watch": "ts-node-dev --respawn --no-notify ./spec/support/jasmine-runner.ts",
		"dev": "nodemon --exec \"fruster-runner ./app.ts\""
	},
	"dependencies": {
		"@fruster/bus": "1.0.0-alpha.15",
		"@fruster/decorators": "1.0.0-alpha.15",
		"@fruster/health": "1.0.0-alpha.15",
		"@fruster/log": "1.0.0-alpha.15",
		"@sendgrid/mail": "^7.7.0",
		"flowmailer": "^1.0.16",
		"got": "11.8.5",
		"handlebars": "^4.7.7",
		"handlebars-helpers": "^0.10.0",
		"mongodb": "2.2.36",
		"ms": "^2.1.3",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@fruster/runner": "^1.0.0-alpha.15",
		"@fruster/test-utils": "1.0.0-alpha.15",
		"@types/handlebars-helpers": "^0.5.3",
		"@types/jasmine": "^4.0.3",
		"@types/mongodb": "2.2.26",
		"@types/ms": "^0.7.31",
		"@types/node": "^17.0.41",
		"@types/uuid": "^8.3.4",
		"jasmine": "^4.1.0",
		"jasmine-spec-reporter": "^7.0.0",
		"nock": "^13.2.7",
		"nyc": "^15.1.0"
	},
	"nyc": {
		"exclude": [
			"spec/*",
			"lib/errors.ts",
			"lib/constants.ts",
			"lib/docs.ts",
			"config.ts"
		]
	}
}
