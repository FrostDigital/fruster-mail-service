		"dev": "nodemon --exec \"fruster-runner ./app.ts\""
	},
	"dependencies": {
		"@fruster/bus": "1.0.0-alpha.14",
		"@fruster/decorators": "1.0.0-alpha.14",
		"@fruster/health": "1.0.0-alpha.14",
		"@fruster/log": "1.0.0-alpha.14",
		"@sendgrid/mail": "^7.4.5",
		"got": "^11.8.2",
		"handlebars": "^4.7.7",
		"handlebars-helpers": "^0.10.0",
		"mongodb": "2.2.36",
		"ms": "^2.1.3",
		"uuid": "^3.4.0"
	},
	"devDependencies": {
		"@fruster/runner": "^1.0.0-alpha.14",
		"@fruster/test-utils": "1.0.0-alpha.14",
		"@types/handlebars-helpers": "^0.5.3",
		"@types/jasmine": "^3.8.2",
		"@types/mongodb": "2.2.26",
		"@types/ms": "^0.7.31",
		"@types/node": "^16.4.13",
		"@types/uuid": "^8.3.4",
		"jasmine": "^3.8.0",
		"jasmine-spec-reporter": "^7.0.0",
		"nyc": "^15.1.0",
		"ts-node": "10.0.0",
		"ts-node-dev": "^1.1.8",
		"typescript": "4.2.4"
	},
	"nyc": {
		"exclude": [
			"spec/*",
			"lib/errors.ts",
			"lib/constants.ts",
			"lib/docs.ts",
			"config.ts"
		]
	}
